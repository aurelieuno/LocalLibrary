extends layout

block content

  h1 #{title}: #{author.name}
  p  #{author.date_of_birth_formatted}

  if book.length>0

    p <strong>Delete the following books before attempting to delete this Author: #{author.name}</strong>

    div(style='margin-left:20px;margin-top:20px')

      p <strong>Books</strong>

      dl
      each val in book
        dt
          a(href=val.url) #{val.title}
        dd (#{val.summary})
  
  else
    p <strong>Do you really want to delete this Author?</strong>
 
    form(method='POST' action='')
      div.form-group
       input#authorid.form-control(type='hidden',name='authorid', required='true', value=author._id )
     
      button.btn.btn-primary(type='submit') Delete
